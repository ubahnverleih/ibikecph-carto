//place labels
#place
{
  ::place_0[zoom>=2][zoom<=7][placegroup=0] {
    text-face-name: @sans;
    [zoom=2] { text-size: @ls_2a; text-fill: @label_light; }
    [zoom=3] { text-size: @ls_3a; text-fill: @label_mid; }
    [zoom=4] { text-size: @ls_4a; text-fill: @label; }
    [zoom=5] { text-size: @ls_5a; text-fill: @label; } 
    [zoom=6] { text-size: @ls_6a; text-fill: @label; } 
    [zoom=7] { text-size: @ls_7a; text-fill: @label; } 
  }

  ::place_1[zoom>=4][zoom<=15][placegroup=1] {
    text-face-name: @sans;
    [zoom=4] { text-size: @ls_4b; text-fill: @label_light; }
    [zoom=5] { text-size: @ls_5b; text-fill: @label_mid; }
    [zoom=6] { text-size: @ls_6b; text-fill: @label; } 
    [zoom=7] { text-size: @ls_7b; text-fill: @label; } 
    [zoom=8] { text-size: @ls_8b; text-fill: @label; } 
    [zoom=9] { text-size: @ls_9b; text-fill: @label; } 
    [zoom=10] { text-size: @ls_10b; text-fill: @label; } 
    [zoom=11] { text-size: @ls_11b; text-fill: @label; } 
    [zoom=12] { text-size: @ls_12b; text-fill: @label; } 
    [zoom=13] { text-size: @ls_13b; text-fill: @label; } 
    [zoom=14] { text-size: @ls_14b; text-fill: @label_mid; } 
    [zoom=15] { text-size: @ls_15b; text-fill: @label_light; } 
  }
  
  ::place_2[zoom>=5][zoom<=15][placegroup=2] {
    text-face-name: @sans;
    [zoom=5] { text-size: @ls_5c; text-fill: @label_light; }
    [zoom=6] { text-size: @ls_6c; text-fill: @label_mid; }
    [zoom=7] { text-size: @ls_7c; text-fill: @label; } 
    [zoom=8] { text-size: @ls_8c; text-fill: @label; } 
    [zoom=9] { text-size: @ls_9c; text-fill: @label; } 
    [zoom=10] { text-size: @ls_10c; text-fill: @label; } 
    [zoom=11] { text-size: @ls_11c; text-fill: @label; } 
    [zoom=12] { text-size: @ls_12c; text-fill: @label; } 
    [zoom=13] { text-size: @ls_13c; text-fill: @label; } 
    [zoom=14] { text-size: @ls_14c; text-fill: @label_mid; }    
    [zoom=15] { text-size: @ls_15c; text-fill: @label_light; }  
  }
  
  ::place_3[zoom>=6][zoom<=15][placegroup=3] {
    text-face-name: @sans_lt;
    [zoom=6] { text-size: @ls_6d; text-fill: @label_light; } 
    [zoom=7] { text-size: @ls_7d; text-fill: @label_mid; }
    [zoom=8] { text-size: @ls_8d; text-fill: @label; } 
    [zoom=9] { text-size: @ls_9d; text-fill: @label; } 
    [zoom=10] { text-size: @ls_10d; text-fill: @label; } 
    [zoom=11] { text-size: @ls_11d; text-fill: @label; } 
    [zoom=12] { text-size: @ls_12d; text-fill: @label; } 
    [zoom=13] { text-size: @ls_13d; text-fill: @label; }
    [zoom=14] { text-size: @ls_14d; text-fill: @label_mid; }
    [zoom=15] { text-size: @ls_15d; text-fill: @label_light; }
  }
  
  ::place_4[zoom>=7][zoom<=15][placegroup=4] {
    text-face-name: @sans_lt;
    [zoom=7] { text-size: @ls_7e; text-fill: @label_light; }
    [zoom=8] { text-size: @ls_8e; text-fill: @label_mid; }
    [zoom=9] { text-size: @ls_9e; text-fill: @label; } 
    [zoom=10] { text-size: @ls_10e; text-fill: @label; } 
    [zoom=11] { text-size: @ls_11e; text-fill: @label; } 
    [zoom=12] { text-size: @ls_12e; text-fill: @label; } 
    [zoom=13] { text-size: @ls_13e; text-fill: @label; } 
    [zoom=14] { text-size: @ls_14e; text-fill: @label_mid; }
    [zoom=15] { text-size: @ls_15e; text-fill: @label_light; }
  }
  
  ::place_5[zoom>=8][zoom<=15][placegroup=5] {
    text-face-name: @sans_lt;
    [zoom=8] { text-size: @ls_8f; text-fill: @label_light; }
    [zoom=9] { text-size: @ls_9f; text-fill: @label_mid; }
    [zoom=10] { text-size: @ls_10f; text-fill: @label; } 
    [zoom=11] { text-size: @ls_11f; text-fill: @label; } 
    [zoom=12] { text-size: @ls_12f; text-fill: @label; } 
    [zoom=13] { text-size: @ls_13f; text-fill: @label; } 
    [zoom=14] { text-size: @ls_14f; text-fill: @label_mid; }
    [zoom=15] { text-size: @ls_15f; text-fill: @label_light; }
  }

  ::place_6[zoom>=9][zoom<=15][placegroup=6] {    
    text-face-name: @sans_lt;
    [zoom=9] { text-size: @ls_9g; text-fill: @label_light; }
    [zoom=10] { text-size: @ls_10g; text-fill: @label_mid; }
    [zoom=11] { text-size: @ls_11g; text-fill: @label; } 
    [zoom=12] { text-size: @ls_12g; text-fill: @label; } 
    [zoom=13] { text-size: @ls_13g; text-fill: @label; } 
    [zoom=14] { text-size: @ls_14g; text-fill: @label_mid; } 
    [zoom=15] { text-size: @ls_15g; text-fill: @label_light; }
  }

  ::place_7[zoom>=11][zoom<=15][placegroup=7] {    
    text-face-name: @sans_lt;
    [zoom=11] { text-size: @ls_11h; text-fill: @label_light; }
    [zoom=12] { text-size: @ls_12h; text-fill: @label_mid; }
    [zoom=13] { text-size: @ls_13h; text-fill: @label; } 
    [zoom=14] { text-size: @ls_14h; text-fill: @label_mid; }    
    [zoom=15] { text-size: @ls_15h; text-fill: @label_light; }  
  }

  ::place_8[zoom>=14][zoom<=15][placegroup=8] {    
    text-face-name: @sans_lt;
    [zoom=14] { text-size: @ls_14i; text-fill: @label_light; } 
    [zoom=15] { text-size: @ls_15i; text-fill: @label_mid; } 
  }
  
  ::island[zoom>=10][zoom<=15] {
    [place='island'] {
      text-min-distance: @text_distance;
      text-line-spacing: @line_spacing;
      text-wrap-width: @wrap_width;
      text-name: [name];
      text-face-name: @sans_lt_italic;
      text-fill: @label_mid;
      text-halo-fill: @label_halo_place_fill;
      text-halo-radius: @label_halo_radius;
      text-character-spacing: @char_spacing;
      text-allow-overlap: false;
      
      [zoom=10] { text-size: @ls_10f; text-fill: @label_light; }
      [zoom=11] { text-size: @ls_11f; }
      [zoom=12] { text-size: @ls_12f; }
      [zoom=13] { text-size: @ls_13f; }
      [zoom=14] { text-size: @ls_14f; }
      [zoom=15] { text-size: @ls_15f; }
    }
  }

  ::islet[zoom>=12][zoom<=15] {
    [place='islet'] {
      text-min-distance: @text_distance;
      text-line-spacing: @line_spacing;
      text-wrap-width: @wrap_width;
      text-name: [name];
      text-face-name: @sans_lt_italic;
      text-fill: @label_mid;
      text-halo-fill: @label_halo_place_fill;
      text-halo-radius: @label_halo_radius;
      text-character-spacing: @char_spacing;
      text-allow-overlap: false;
      
      [zoom=14] { text-size: @ls_14g; text-fill: @label_light; }
      [zoom=15] { text-size: @ls_15g; }
    }
  }


  ::place_0[zoom>=2][zoom<=7][placegroup=0],
  ::place_1[zoom>=4][zoom<=15][placegroup=1],
  ::place_2[zoom>=5][zoom<=15][placegroup=2],
  ::place_3[zoom>=6][zoom<=15][placegroup=3],
  ::place_4[zoom>=7][zoom<=15][placegroup=4],
  ::place_5[zoom>=8][zoom<=15][placegroup=5],
  ::place_6[zoom>=9][zoom<=15][placegroup=6],
  ::place_7[zoom>=11][zoom<=15][placegroup=7],
  ::place_8[zoom>=14][zoom<=15][placegroup=8] {
    text-min-distance: @text_distance;
    text-line-spacing: @line_spacing;
    text-wrap-width: @wrap_width;
    text-name: [name];
    text-halo-fill: @label_halo_place_fill;
    text-halo-radius: @label_halo_radius;
    text-character-spacing: @char_spacing;
    text-allow-overlap: false;
    
    [zoom=14] { text-transform: uppercase; text-face-name: @sans; }
    [zoom=15] { text-transform: uppercase; text-face-name: @sans; }

    [place='island'],
    [place='islet'],
    [place='locality'] {
      text-transform: none; text-face-name: @sans_lt_italic;
    }
  }
}